<input type="range" value="10" />

<style>
  @property --i {
    syntax: "<number>";
    inherits: true;
    initial-value: 1;
  }

  :global(html) {
    timeline-scope: --thumb-view;
    --min: 14px;
    --max: 28px;
    --step: 2px;
  }

  :global(section) {
    animation: i linear both;
    animation-timeline: --thumb-view;
    animation-range: entry 100% exit 0%;
    /* font-size: round(
      var(--min) + (var(--max) - var(--min)) * var(--i),
      var(--step)
    ); */
  }

  @keyframes i {
    to {
      --i: 0;
    }
  }

  input[type="range"] {
    display: block;
    overflow: hidden;
  }

  input[type="range"]::-webkit-slider-thumb {
    view-timeline: --thumb-view inline;
  }
</style>
